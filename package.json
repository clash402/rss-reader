{
  "name": "rss-reader",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "lint:watch": "eslint . --max-warnings=0 --watch",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "format:watch": "prettier . --write --watch",
    "typegen": "next typegen",
    "prelint": "npm run typegen --silent",
    "prelint:watch": "npm run typegen --silent",
    "postinstall": "npm run typegen --silent",
    "prepare": "husky"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.31.0",
    "idb": "^8.0.3",
    "jsdom": "^28.0.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-swipeable": "^7.0.2",
    "rss-parser": "^3.13.0",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,css}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "npm run typegen --silent",
      "eslint --max-warnings=0 --fix --cache"
    ]
  }
}
